{
  "build": {
    "command": "docker build -t app:latest ."
  },
  "deploy": {
    "port": 8080,
    "healthcheck": "/health",
    "environment": {
      "PORT": "8080",
      "ENVIRONMENT": "production"
    },
    "volumes": [
      {
        "source": "/var/app/data",
        "target": "/app/data"
      }
    ]
  },
  "domains": [
    {
      "domain": "api.doctorhealthy1.com",
      "path": "/"
    }
  ]
}
